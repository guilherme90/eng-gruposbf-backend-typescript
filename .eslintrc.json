{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard",
    "plugin:import/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "indent": "off",
    "eol-last": "off",
    "@typescript-eslint/no-restricted-syntax": "off",
    "@typescript-eslint/camelCase": "off",
    "@typescript-eslint/import/no-named-default": "off"
  },
  "ignorePatterns": "dist"
}