{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": ["es6"],
    "allowJs": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "removeComments": true,
    "types": ["jest", "node"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "prisma/**/*.ts",
    "@types/jest"
  ]
}