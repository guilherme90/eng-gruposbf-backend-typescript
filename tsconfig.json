{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": false,
    "types": ["jest", "node"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
	"./prisma/**/*.*"
  ],
  "exclude": [
	"./dist/*"
  ]
}
