{
  "name": "eng-gruposbf-backend-typescript",
  "version": "1.0.0",
  "description": "Grupo SBF - Conversor de moedas",
  "main": "src/index.ts",
  "engines": {
    "node": "17.x",
    "npm": "8.5.*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guilherme90/eng-gruposbf-backend-typescript.git"
